<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textview_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview_datosproducto"
        android:layout_marginStart="0dp"
        android:layout_marginTop="21dp"
        android:text="Nombre Producto:" />


    <TextView
        android:id="@+id/textview_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview_datosproducto"
        android:layout_marginTop="48dp"
        android:text="Color:" />

    <TextView
        android:id="@+id/textview_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview_datosproducto"
        android:layout_marginTop="78dp"
        android:text="Peso Neto:" />

    <TextView
        android:id="@+id/textview_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview_datosproducto"
        android:layout_marginTop="109dp"
        android:text="Descripcion:" />

    <TextView
        android:id="@+id/textview_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview_datosproducto"
        android:layout_marginTop="140dp"
        android:text="Precio:" />

    <TextView
        android:id="@+id/textview_datosproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:text="Datos Adicional:" />


    <Button
        android:id="@+id/buttonAñadir"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textview_precio"
        android:layout_marginEnd="19dp"
        android:text="Añadir" />
</RelativeLayout>
